<%= render 'shared/error_messages' %>

<%= form_with model: @event_form, url: events_path, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date, class: 'form-control' %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date, class: 'form-control' %>
  <%= f.label :start_time %>
  <%= f.time_field :start_time, class: 'form-control' %>
  <%= f.label :end_time %>
  <%= f.time_field :end_time, class: 'form-control' %>
  <%= f.label :day_of_week %>
  <%= f.select :day_of_week, [["Sunday", 0], ["Monday", 1], ["Tuesday", 2], ["Wednesday", 3], ["Thursday", 4], ["Friday", 5], ["Saturday", 6]], include_blank: true, class: 'form-control' %>
  <%= f.label :with_order %>
  <%= f.select :with_order, [["1st", 1], ["2nd", 2], ["3rd", 3], ["4th", 4], ["5th", 5]], include_blank: true, class: 'form-control' %>
  <%= f.label :week_of_month %>
  <%= f.select :week_of_month, [["1st week", 1], ["2nd week", 2], ["3rd week", 3], ["4th week", 4], ["5th week", 5], ["6th week", 6]], include_blank: true, class: 'form-control' %>
  <%= f.label :day_of_month %>
  <%= f.select :day_of_month, [*1..31,-1], include_blank: true, class: 'form-control' %>

  <%= f.fields_for :reminders do |i| %>
    <%= i.label 'Reminder-' + (i.index + 1).to_s %>
    <div class="row">
      <div class="number col-xs-6">
        <%= i.number_field :number, class: 'form-control' %>
      </div>
      <div class="unit col-xs-6">
        <%= i.select :unit, [["minute", 1], ["hour", 2], ["day", 3]], class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <%= f.submit yield(:button_text), class: "btn btn-success" %>
<% end %>